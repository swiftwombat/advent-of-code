{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "2024",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build",
      "program": "${workspaceFolder}/bin/Debug/net9.0/csharp.dll",
      "console": "integratedTerminal",
      "args": [
        "2024",
        "${input:dayArg}"
      ]
    },
  ],
  "inputs": [
    {
      "id": "dayArg",
      "type": "promptString",
      "description": "Enter day number (e.g. '3' will run 'Day03.cs')"
    }
  ]
}